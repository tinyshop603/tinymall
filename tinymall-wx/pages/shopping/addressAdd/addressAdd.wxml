<view class="add-address">
    <view class="add-form">
        <view class="form-item">
            <text class="form-txt">联系人：</text>
            <input class="input" bindinput="bindinputName" placeholder="你的名字" placeholder-class="placeholder" value="{{address.name}}" auto-focus/>
        </view>
        <view class="form-item">
            <text class="form-txt">手机号码：</text>
            <input class="input" bindinput="bindinputMobile" value="{{address.mobile}}" placeholder="配送员联系您的手机号" placeholder-class="placeholder"/>
        </view>
        <view class="form-item">
            <text class="form-txt-adress">收货地址：</text>
            <text class="icon" wx:if="{{address.address == ''}}"></text>
            <view class="form-content" bindtap="chooseAddress">
                <view class="fwidth {{address.address == '' ? 'placeholder' : ''}}" >{{address.address == "" ? "点击获取" : address.address}}</view>
                <view class="no-valid-adress" wx:if="{{!isValidAddress}}">不在配送范围内</view>
            </view>
        </view>
        <!-- <view class="form-item">
            <text class="form-txt">省份、城市、区县：</text>
            <input class="input" value="{{address.provinceName + address.cityName + address.areaName}}" disabled="true" bindtap="chooseRegion" placeholder="省份、城市、区县" placeholder-class="placeholder"/>
        </view>  -->
        <view class="form-item">
            <text class="form-txt">门牌号：</text>
            <input class="input" bindinput="bindinputAddressDetail" value="{{address.addressDetail}}" placeholder="详细地址, 楼号，单元号及门牌号等" placeholder-class="placeholder"/>
        </view>
        <view class="form-default">
            <text bindtap="bindIsDefault" class="default-input {{address.isDefault == 1 ? 'selected' : ''}}">设为默认地址</text>
        </view>
    </view>

    <view class="btns">
        <button class="save" bindtap="saveAddress">保存</button>
    </view>

